{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["DOM", "ES2020"],
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "moduleResolution": "Node",
        "resolveJsonModule": true,

        // add these:
        "rootDir": "src",
        "outDir": "build"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}
